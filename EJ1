/* 1. Realizar una funci√≥n que determine el mayor elemento de la matriz */
#include <iostream>
#define K 4
#define L 4
using namespace std;
int mayor (int m[K][L]); 

int main ()
   { 
       int matriz [K][L]={0};
       for (int k=0;k<K;k++) {
           for (int l=0;l<L;l++)
           {
               cout << "Cargando el valor en posicion ("<<k<<","<<l<<") " <<endl;
               cin>>matriz [k][l];
           }
    }
    cout<<"El mayor numero ingresado a la matriz es:" <<mayor(matriz) <<endl;
    return 0; 
   }
   int mayor (int m[K][L])
   {
       int mayor=0;
       for (int k=0;k<K;k++) { 
           for (int l=0;l<L;l++)
           { 
               if (m[k][l]>mayor)
               {
                   mayor = m [k] [l];
               }
           }
           
       } 
     return mayor;
   }
