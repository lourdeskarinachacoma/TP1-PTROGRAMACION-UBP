/* 10.  Reemplazar los valores de la matriz original con la informaci√≥n contenida en los siguientes arreglos: 
A					B				C
Fila	Columna	 Valor
 0			2	 56
 2			1	 45
 2			0	 34
 1			1	 76
 2			0	 19
 0			2	 22

*/

#include <iostream>
#include <math.h>
#define K 4
#define L 4

using namespace std;
void imprimir(int m[K][L]);
int punto1(int m[K][L]);
int punto2(int m[K][L]);
void punto3 (int m[K][L]);
void punto4(int m[K][L]);
void punto5(int m[K][L]);
void punto6(int m[K][L]);
int punto7(int m[K][L]);
void punto8(int m[K][L]);
void punto9(int m[K][L]);
void punto10 (int m[K] [L]); 
int main()
{
	
	int matriz [K][L]={0};
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			cout<<"Cargando valor en posicion ("<<k<<","<<l<<")"<<endl;
			cin>>matriz[k][l];
		}
	}
	cout<<endl;
	imprimir(matriz);
	cout<<endl;
	cout<<"el mayor numero ingresado a la matriz es: "<<punto1(matriz)<<endl;
	cout<<"el menor numero ingresado a la matriz es: "<<punto2(matriz)<<endl;
	punto3(matriz);
	
}
void imprimir (int m[K][L])
{
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			cout<<m[k][l]<<"	";
		}              
		 cout<<endl;
	}          
		
}

int punto1(int m[K][L])
{
	int mayor=0;
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			
			if(m[k][l] > mayor)
			{
				mayor=m[k][l];
			}
			
		}
	}
	return mayor;
}

int punto2(int m[K][L])
{
	int menor=999999;
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			
			if(m[k][l] < menor)
			{
				menor=m[k][l];
			}
			
		}
	}
	return menor;
}

void punto3 (int m[K][L]){
	int v[K]={0};
	int suma=0;
	
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			
			suma+=m[k][l];
		}
		v[k]=suma;
	}
	cout<<"suma de las filas en el vector"<<endl;
	for(int k=0;k<K;k++)
	{
		cout<<v[k]<<endl;
	}
}
void punto4(int m[K][L])
{
	int n[K][L]={0};
	
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			
		n[k][l]=pow(m[k][l],2);
		}
		
	}
	cout<<"matriz original"<<endl;
	imprimir(m);
	cout<<"Matriz elevada"<<endl;
	imprimir(n);
	
}

void punto5(int m[K][L])
{
	int v[K*L]={0};
	int c=0, n=0;
	cout <<"Ingrese un valor entero "<<endl;
	cin>>n;
		for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			
			if(m[k][l]<n){
				v[c]=m[k][l];
				c++;
			}
		}
		
	}
	imprimir(m);
	cout<<"Numeros menores que "<<n<<endl;
	for(int k=0;k<c;k++){
		cout<<v[k]<<endl;
	}
	
}

void punto6(int m[K][L])
{
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			cout<<m[l][k]<<"	";
		}              
		 cout<<endl;
	}          
}

int punto(int m[K][L])
{
	int s=0;
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
		if(k==l){s+=m[k][l];}
		}              
		 
	} 
	
	return s;      
}

void punto8(int m[K][L])
{
	
	int s=0;
	int l=2;
	cout << "La diagonal secundaria es:"<<endl;
	for(int k=0;k<L;k++)
	{
	
		cout<<m[k][l]<<endl;
		s+=m[k][l];
		l=l-1;
	}
	cout<<"La sumatoria de la diagonal secundaria es: "<<s<<endl;
     
}
void punto9(int m[K][L])
{
	
	int n[K][L];
	for(int k=0;k<K;k++){
		
		for(int l=0;l<L;l++)
		{
			if(m[k][l]>0)
			
			{
			n[k][l]=m[k][l];
			}else if(m[k][l]<0)
			{
				n[k][l]=0;
			}else {
				n[k][l]=-1;
			}
		}
	} 
		imprimir(m);
		cout<<endl;
		imprimir(n);
	
	
}

void punto10(int m[K][L]){
 /*
Fila	Columna	 Valor
 0			2	 56
 2			1	 45
 2			0	 34
 1			1	 76
 2			0	 19
 0			2	 22  */  
 
 cout<<"Punto 10"<<endl;
 
 cout<<"Reemplazamos fila 0 columna 2 por el valor 56"<<endl;
 m[0][2]=56;
 imprimir(m);
 cout<<endl;
 cout<<"Reemplazamos fila 2 columna 1 por el valor 45"<<endl;
 m[2][1]=45;
 imprimir(m);
 cout<<endl;
 cout<<"Reemplazamos fila 2 columna 0 por el valor 34"<<endl;
 m[2][0]=34;
 imprimir(m);
 cout<<endl;
 cout<<"Reemplazamos fila 1 columna 1 por el valor 76"<<endl;
 m[1][1]=76;
 imprimir(m);
 cout<<endl;
 cout<<"Reemplazamos fila 2 columna 0 por el valor 19"<<endl;
 m[2][0]=19;
 imprimir(m);
 cout<<endl;
 cout<<"Reemplazamos fila 0 columna 2 por el valor 22"<<endl;
 m[0][2]=22;
 imprimir(m);
 cout<<endl;
 imprimir(m);
}
